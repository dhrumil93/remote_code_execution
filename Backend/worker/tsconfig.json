{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": ["./*.ts", "src/*/*.ts", "src/*.ts", ".env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
